<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main7Activity"
    android:background="@drawable/gradients">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradients"
        android:text="OPPORTUNITY"
        android:textAlignment="center"
        android:textColor="@color/startcolor"
        android:textSize="45dp" />


    <EditText
        android:id="@+id/ldid2"
        style="@style/contactedittext"
        android:hint="Leads Id..." />

    <EditText
        android:id="@+id/Name2"
        style="@style/contactedittext"
        android:hint="Name..." />

    <EditText
        android:id="@+id/mobno3"
        style="@style/contactedittext"
        android:hint="Mobile no..." />

    <EditText
        android:id="@+id/email3"
        style="@style/contactedittext"
        android:hint="Email Id...@gmail.com" />


    <EditText
        android:id="@+id/comname3"
        style="@style/contactedittext"
        android:hint="Company name..." />

    <EditText
        android:id="@+id/contact3"
        style="@style/contactedittext"
        android:hint="Company contact no..." />

    <EditText
        android:id="@+id/newnote3"
        style="@style/contactedittext"
        android:hint="NOTE..new lead" />


    <Button
        android:id="@+id/btndata3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/midcolor"
        android:text="data"
        android:textColor="@color/startcolor"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnsub3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/midcolor"
        android:text="Submit"
        android:textColor="@color/startcolor"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnexit3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="10dp"
        android:background="@color/midcolor"
        android:text="exit"
        android:textColor="@color/startcolor"
        android:textSize="30dp" />

</LinearLayout>